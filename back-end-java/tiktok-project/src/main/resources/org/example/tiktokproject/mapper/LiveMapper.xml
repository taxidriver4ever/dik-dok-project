<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.tiktokproject.mapper.LiveMapper">
    <insert id="insertLive">
        insert into live (url,author,title,createdTime,updatedTime) values (#{url},#{author},#{title},NOW(3),NOW(3));
    </insert>
    <delete id="deleteLive">
        delete from live
        <where>
            author = #{author}
        </where>
    </delete>
    <select id="selectLiveByAuthor" resultType="integer">
        select id from live where author = #{author}
    </select>
</mapper>